# ============================================================================
# MALAYSIAN EMPLOYMENT ASSISTANT - ENVIRONMENT VARIABLES
# ============================================================================
# Copy this file to .env and fill in your values
# ============================================================================

# ============================================================================
# API SERVER CONFIGURATION
# ============================================================================
API_SERVER_HOST=0.0.0.0
API_SERVER_PORT=8000
API_SERVER_RELOAD=true

# ============================================================================
# LLM MODEL CONFIGURATION
# ============================================================================
# Choose one of these models:
# - microsoft/Phi-3-mini-4k-instruct (Recommended - 3.8B)
# - TinyLlama/TinyLlama-1.1B-Chat-v1.0 (Fastest - 1.1B)
# - mistralai/Mistral-7B-Instruct-v0.3 (Better quality - 7B)
# - meta-llama/Meta-Llama-3-8B-Instruct (Best quality - 8B)
MODEL_NAME=microsoft/Phi-3-mini-4k-instruct

# Use quantization to save memory (true/false)
USE_QUANTIZATION=true

# Device: cpu, cuda, or mps (for Mac M1/M2)
DEVICE=auto

# ============================================================================
# CACHING CONFIGURATION
# ============================================================================
# How long to cache law data (in hours)
CACHE_HOURS=24

# Enable auto-refresh of law data
AUTO_REFRESH=true

# ============================================================================
# WEB SCRAPING CONFIGURATION
# ============================================================================
# User agent for web scraping
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# Request timeout (seconds)
REQUEST_TIMEOUT=10

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
DATABASE_URL=sqlite:///law_cache.db

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
LOG_LEVEL=INFO
LOG_FILE=server.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================
# API key prefix
API_KEY_PREFIX=mea_

# Enable CORS (for Flutter app)
ENABLE_CORS=true

# Allowed origins (comma-separated)
ALLOWED_ORIGINS=*

# ============================================================================
# OPTIONAL: EXTERNAL API KEYS (if using cloud LLMs)
# ============================================================================
# Only needed if you want to use cloud-based LLMs instead of local
# OPENAI_API_KEY=sk-...
# ANTHROPIC_API_KEY=sk-ant-...

# ============================================================================
# MALAYSIAN LAW DATA SOURCES
# ============================================================================
MOHR_URL=https://www.mohr.gov.my
EPF_URL=https://www.kwsp.gov.my
SOCSO_URL=https://www.perkeso.gov.my
AGC_URL=https://www.agc.gov.my

# ============================================================================
# FLUTTER APP CONFIGURATION
# ============================================================================
# Your server IP address (change this for mobile app)
# Example: http://192.168.1.100:8000
API_BASE_URL=http://localhost:8000

# ============================================================================
# DEVELOPMENT SETTINGS
# ============================================================================
DEBUG=false
TESTING=false